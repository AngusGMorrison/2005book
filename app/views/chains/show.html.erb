<h1>Message with <%= @friend.name %></h1>

<% @messages.each do |message| %>

    <img src=<%= message.sender.profile.photo_url %> alt="" width="25"> <br>
    <%= message.content %> <br>
    <small><%= I18n.l(message.created_at, format: :long) %></small>
    <br><br>
<% end %>

<br><br>

<%= form_for @new_message do |f| %>
    <%= f.hidden_field :sender_id, value: current_user.id %> <br>
    <%= f.hidden_field :receiver_id, value: @friend.id %> <br>
    <%= f.hidden_field :chain_id, value: @chain.id %> <br>
    <%= f.text_area :content %> <br>
    <%= f.submit "Send"%>
<% end %>